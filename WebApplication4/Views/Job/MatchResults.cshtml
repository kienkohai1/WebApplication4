@model List<AIResult>

<div class="container mt-5">
    <h2 class="text-center mb-4">🚀 Kết Quả Gợi Ý Việc Làm</h2>

    @if (Model != null && Model.Any())
    {
        foreach (var item in Model)
        {
            var matchPct = (int)(item.Score * 100);
            <div class="card mb-3 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="card-title text-primary">@item.Title</h5>
                        <span class="badge bg-success">Độ phù hợp: @matchPct%</span>
                    </div>

                    <div class="progress mt-2" style="height: 20px;">
                        <div class="progress-bar progress-bar-striped progress-bar-animated"
                             role="progressbar"
                             style="width: @matchPct%;"
                             aria-valuenow="@matchPct" aria-valuemin="0" aria-valuemax="100">
                        </div>
                    </div>

                    <p class="mt-3 mb-1"><strong>Kỹ năng khớp:</strong></p>
                    <div>
                        @foreach (var skill in item.MatchedSkills)
                        {
                            <span class="badge rounded-pill bg-info text-dark">@skill</span>
                        }
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-warning">Không tìm thấy công việc phù hợp.</div>
    }
</div>